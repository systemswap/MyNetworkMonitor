<Window x:Class="MyNetworkMonitor.PayPalDonation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="PayPal Donation" Height="400" Width="400">

    <Grid Background="#F5F7FA">
        <Border Background="White" Padding="20" CornerRadius="10"
                Width="350" Height="340" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="-20,-20,-20,-20">

                <!-- PayPal Logo -->
                <Image Source="/Images/PayPal.png"
                       Width="100" Height="40" Margin="0,30,0,20"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       RenderOptions.EdgeMode="Aliased"
                       SnapsToDevicePixels="True"/>

                <!-- "Donate to: MyCons" in einer Zeile -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Donate to: " FontSize="14" FontWeight="Bold" Foreground="Black"/>
                    <TextBlock x:Name="RecipientNameTextBlock" Text="MyCons"
                               FontSize="14" FontWeight="Bold" Foreground="Black"/>
                </StackPanel>

                <!-- Zweck -->
                <TextBlock x:Name="DonationPurposeTextBlock" Text="Purpose: MyNetworkMonitor"
                           FontSize="12" Foreground="Gray"
                           HorizontalAlignment="Center" Margin="0,5,0,20"/>

                <!-- Betrag + Währung in einer Zeile -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="AmountTextBox" Width="80" FontSize="20" 
                             TextAlignment="Center"
                             Text="25"
                             PreviewTextInput="AmountTextBox_PreviewTextInput"
                             PreviewKeyDown="AmountTextBox_PreviewKeyDown"/>
                    <TextBlock x:Name="CurrencyTextBlock" Text="USD" FontSize="14" Foreground="Gray" Margin="10,5,0,0"/>
                </StackPanel>

                <!-- Subscription Option -->
                <CheckBox x:Name="SubscriptionCheckBox" Content="Make this a yearly subscription"
                          FontSize="12" Foreground="Black" HorizontalAlignment="Center" Margin="0,5,0,25"
                          Checked="SubscriptionCheckBox_Checked" Unchecked="SubscriptionCheckBox_Unchecked"/>

                <!-- Spenden-Button -->
                <Button x:Name="DonatePayPalButton"
                        Content="Donate with PayPal" Click="DonateWithPayPal_Click"
                        Background="#0070BA" Foreground="White"
                        FontSize="14" Width="250" Height="40"
                        BorderThickness="0"
                        Cursor="Hand"/>

            </StackPanel>
        </Border>

        <!-- WebView2 füllt das gesamte Fenster -->
        <wv2:WebView2 x:Name="PayPalWebView"
                      Visibility="Collapsed" Margin="10,10,10,0"/>
    </Grid>
</Window>
