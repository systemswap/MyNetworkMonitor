         xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        
        mc:Ignorable="d"
        Title="My Network Monitor" Height="800" Width="1855" MinWidth="1855" MinHeight="450" Closing="Window_Closing" Background="#FFF3F3F3">


    <Grid>
        <Grid>
