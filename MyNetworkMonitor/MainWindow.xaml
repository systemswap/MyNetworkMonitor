                        <Label Content="IP-Address" Background="Yellow" HorizontalAlignment="Left" Margin="10,0,0,3" Grid.Row="4" VerticalAlignment="Bottom" MinWidth="65" Width="70" FontSize="10" Height="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
