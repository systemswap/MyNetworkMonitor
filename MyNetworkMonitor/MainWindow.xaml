                        <Label Content="lookup IPs" Background="cyan" HorizontalAlignment="Left" Margin="235,0,0,3" Grid.Row="4" VerticalAlignment="Bottom" MinWidth="65" Width="70" FontSize="10" Height="34" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
