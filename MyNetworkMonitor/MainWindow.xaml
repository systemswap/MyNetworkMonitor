                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Margin" Value="0,0,0,5"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Expander IsExpanded="True" Background="#189AB4"  Foreground="Black" BorderThickness="1,1,1,5">
                                                            <Expander.Header>
                                                                <DockPanel>
                                                                    <TextBlock FontWeight="Bold" Margin="5,0,0,0">
                                                                        <TextBlock.Text>
                                                                            <MultiBinding StringFormat=" IPGroupDescription: {0} with ">
                                                                                <Binding Path="Name"/>
                                                                            </MultiBinding>
                                                                        </TextBlock.Text>
                                                                    </TextBlock>
                                                                    <TextBlock FontWeight="Bold" Text="{Binding ItemCount}"/>
                                                                    <TextBlock FontWeight="Bold" Text=" items"/>
                                                                </DockPanel>
                                                            </Expander.Header>
                                                            <ItemsPresenter />
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                                <!-- Style for groups under the top level. -->

                                <!--<GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <DockPanel Background="LightGray">
                                   
                                        <TextBlock FontWeight="Bold" Text="{Binding Path=Name}" Margin="5,0,0,0" Width="100"/>
                                        <TextBlock Text="{Binding Path=ItemCount}" Foreground="Black"/>
                                    </DockPanel>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>-->

                                <GroupStyle>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Margin" Value="25,0,0,5"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                        <Expander IsExpanded="True" Background="#FFC8E7F7" BorderBrush="#6B7B9A" Foreground="Black" BorderThickness="1,1,1,3">
                                                            <Expander.Header>
                                                                <DockPanel>
                                                                    <TextBlock FontWeight="Bold" Text="{Binding ItemCount}"/>
                                                                    <TextBlock FontWeight="Bold" Text=" items"/>
                                                                </DockPanel>
                                                            </Expander.Header>
                                                            <ItemsPresenter />
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </DataGrid.GroupStyle>



                        </DataGrid>
                        <CheckBox x:Name="chk_IPRanges_groupDevices" Content="group Devices" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Click="chk_IPRanges_groupDevices_Click"/>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="bt_Scan_IP_Ranges" Content="Scan IP Ranges" Click="bt_Scan_IP_Ranges_Click" Margin="10,10,10,10" Background="#BFA4B1BF" OpacityMask="Black" Grid.Column="1">
                                <!--Background="#BFA4B1BF"-->
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_PortsToScan" Header="Ports To Scan">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <DataGrid x:Name="dg_PortsToScan" Margin="10,10,10,10" Grid.Row="1" AlternationCount="2" AlternatingRowBackground="LightGray"/>
                        <Button x:Name="bt_SavePortsToScan" Content="Save Port Collection" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="293" Height="20" Click="bt_SavePortsToScan_Click" Background="#BFA4B1BF" OpacityMask="Black">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>

                    </Grid>
                </TabItem>
                <TabItem x:Name="tab_Services" Header="Services">

                    <Grid>
                        <DataGrid x:Name="dg_Services" AutoGenerateColumns="False" CanUserAddRows="False" Margin="10,68,10,62" AlternationCount="2" AlternatingRowBackground="#FFE6E6E6">

                            <DataGrid.ContextMenu>
                                <ContextMenu x:Name="contextMenu_dg_Services">
                                    <MenuItem Header="get default ports)" Click="dg_ServicesGetDefaultPorts_Click"/>
                                </ContextMenu>
                            </DataGrid.ContextMenu>

                            <DataGrid.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}"  Background="#189AB4" FontSize="14"/>
                                        </DataTemplate>
                                    </GroupStyle.HeaderTemplate>
                                </GroupStyle>
                            </DataGrid.GroupStyle>

                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="toScan" Binding="{Binding toScan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="False">
                                    <DataGridCheckBoxColumn.ElementStyle>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Focusable" Value="False"/>
                                            <!-- Direkt anklickbar -->
                                        </Style>
                                    </DataGridCheckBoxColumn.ElementStyle>
                                </DataGridCheckBoxColumn>
                                <DataGridTextColumn Header="Service" Binding="{Binding Service}" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Ports" Binding="{Binding Ports}" IsReadOnly="false"/>
                                <DataGridTextColumn Header="HelloBytePackage" Binding="{Binding HelloBytePackage}" IsReadOnly="True" Visibility="Hidden"/>
                                <DataGridTextColumn Header="ResponsedBytePackagePart" Binding="{Binding ResponsedBytePackagePart}" IsReadOnly="True" Visibility="Hidden"/>
                                <DataGridTextColumn Header="ResponsedContainsString" Binding="{Binding ResponsedContainsString}" IsReadOnly="True" Visibility="Hidden"/>

                            </DataGrid.Columns>
                        </DataGrid>
                        <CheckBox Name="chk_Services_showOnlyIsRunning" Content="show only running services" HorizontalAlignment="Left" Margin="43,34,0,0" VerticalAlignment="Top" Width="193" Checked="chk_Services_showOnlyIsRunning_Checked" Unchecked="chk_Services_showOnlyIsRunning_Unchecked" IsChecked="True"/>
                    </Grid>


                </TabItem>

                <TabItem x:Name="tab_InternalNames" Header="Internal Names">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="0,40,1,0" Grid.Row="2" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="156*"/>
                                <ColumnDefinition Width="157*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="bt_SaveNames" Content="save names to xml" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#BFA4B1BF" OpacityMask="Black" Click="bt_SaveNames_Click" Grid.Column="1" Width="136">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="bt_AddInternalNamesToScanResult" Content="internal names to result"  Background="#BFA4B1BF" HorizontalAlignment="Center" VerticalAlignment="Center" Width="136" Click="bt_AddInternalNamesToScanResult_Click">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
