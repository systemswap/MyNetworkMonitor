<Window x:Class="MyNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNetworkMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="215*"/>
                <ColumnDefinition Width="529*"/>
                <ColumnDefinition Width="56*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="147*"/>
                <RowDefinition Height="40*"/>
            </Grid.RowDefinitions>
            <TabControl Margin="10,10,10,10" Grid.Row="1">
                <TabItem Header="From IP Ranges">
                    <Grid x:Name="SummaryGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="110*"/>
                            <RowDefinition Height="13*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="bt_Scan_IP_Ranges" Content="Start Scan" HorizontalAlignment="Left" Margin="121,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="58" Click="bt_Scan_IP_Ranges_Click"/>
                        <DataGrid x:Name="dgv_IP_Ranges" Margin="10,10,10,10"/>

                    </Grid>
                </TabItem>
                <TabItem Header="From Remote"/>




            </TabControl>
            <DataGrid x:Name="dgv_Results" Grid.Column="1" Margin="10,10,10,10" Grid.Row="1" AutoGeneratingColumn="dgv_Devices_OnAutoGeneratingColumn"> 
                <DataGrid.Resources>
                    <DataTemplate x:Key="Ping">
                        <Image Source="{Binding Path=Ping}" Width="16" Height="16"/>
                    </DataTemplate>
                    
                    <DataTemplate x:Key="SSDP">
                        <Image Source="{Binding Path=SSDP}" Width="16" Height="16"/>
                    </DataTemplate>
                </DataGrid.Resources>
            </DataGrid>
            <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" Margin="95,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        </Grid>

    </Grid>
</Window>
