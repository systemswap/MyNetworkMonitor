                        <TextBox x:Name="tb_Adapter_LastSubnetIP" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="tb_Adapter_LastSubnetIP_TextChanged" Grid.Row="5" Grid.Column="1" Margin="0,1,0,0" HorizontalAlignment="Center" Width="138"/>
                        <Button x:Name="bt_StartScanFromNIC" Background="#BFA4B1BF" Content="start scan" HorizontalAlignment="Center" VerticalAlignment="Center" Width="138" Grid.Row="7" HorizontalContentAlignment="Center" Click="bt_StartScanFromNIC_Click" Grid.Column="1">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        <Label Content="IPs to Scan:" Grid.Row="6" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Width="145" Height="23" VerticalAlignment="Bottom" Margin="0,0,0,5" Background="#FF189AB4" />
