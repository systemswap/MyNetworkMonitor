                        <DataGrid x:Name="dg_InternalNames" Grid.Row="1" Margin="10,0,10,10" CellEditEnding="dg_InternalNames_CellEditEnding" LoadingRow="dg_InternalNames_LoadingRow" ScrollBar.Scroll ="dg_InternalNames_Scroll" RowEditEnding="dg_InternalNames_RowEditEnding">
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Paste" Click="dg_InternalNames_ContextMenu_Click" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                        <Label Content="Filter" HorizontalAlignment="Left" Margin="10,2,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                        <TextBox x:Name="tb_InternalNamesFilter" HorizontalAlignment="Left" Margin="51,0,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Center" Width="252" TextChanged="tb_InternalNamesFilter_TextChanged"/>



                    </Grid>
                </TabItem>

                <TabItem x:Name="Infos" Header="Infos">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="15"/>
