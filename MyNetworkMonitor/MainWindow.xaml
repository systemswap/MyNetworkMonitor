                        <Image x:Name="img_Logo" Margin="14,15,14,12" Grid.Row="6"/>
                    </Grid>
                </TabItem>



            </TabControl>

            <Grid x:Name="tb_Ports" Grid.Column="1" Margin="13,12,10,0" Grid.RowSpan="3" Height="73" VerticalAlignment="Top">
