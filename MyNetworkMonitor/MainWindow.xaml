<Window x:Class="MyNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNetworkMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="799" Width="1855">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="251"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="29"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="30" MinHeight="44.04"/>
            </Grid.RowDefinitions>
            <TabControl Margin="10,10,10,10" Grid.Row="2">
                <TabItem Header="From IP Ranges">
                    <Grid x:Name="SummaryGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="112*"/>
                            <ColumnDefinition Width="113*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="181*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="bt_Edit_IP_Range" Content="Edit Range" HorizontalAlignment="Center" Width="93" Margin="0,10,0,10" Grid.Row="0" Grid.Column="0" />
                        <Button x:Name="bt_Add_IP_Range" Content="Add Range" HorizontalAlignment="Center" Width="93" Margin="0,10,0,10" Grid.Row="0" Grid.Column="1" />

                        <DataGrid x:Name="dgv_IP_Ranges" Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <Button x:Name="bt_Scan_IP_Ranges" Content="Scan IP Range" Click="bt_Scan_IP_Ranges_Click" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="205" Margin="10,10,0,10" Grid.Row="2" />
                        <Grid Grid.ColumnSpan="2"/>

                    </Grid>
                </TabItem>
                <TabItem Header="From Remote"/>
                <TabItem Header="Filter"/>




            </TabControl>
            <DataGrid x:Name="dgv_Results" Grid.Column="1" Margin="10,10,10,10" Grid.Row="2" AutoGeneratingColumn="dgv_Devices_OnAutoGeneratingColumn">

                <DataGrid.Resources>
                    <DataTemplate x:Key="ARPStatus">
                        <Image Source="{Binding Path=ARPStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="PingStatus">
                        <Image Source="{Binding Path=PingStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="SSDPStatus">
                        <Image Source="{Binding Path=SSDPStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="ReverseLookUpStatus">
                        <Image Source="{Binding Path=ReverseLookUpStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                </DataGrid.Resources>
            </DataGrid>
            <Grid Grid.Column="1" Grid.Row="1" Margin="13,0,10,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="165"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="125"/>
                </Grid.ColumnDefinitions>

                <Label Content="Methodes to find Device:" Grid.Column="0"/>
                <CheckBox x:Name="chk_Methodes_ARP" Content="arp -a" Grid.Column="1" Margin="1,6,0,-1" HorizontalAlignment="Left" Width="62"/>
                <CheckBox x:Name="chk_Methodes_Ping" Content="Ping" Grid.Column="2" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="60"/>
                <CheckBox x:Name="chk_Methodes_SSDP" Content="SSDP" Grid.Column="3" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="60"/>




                <Label Content="Device Informations:" Grid.Column="4" Margin="39,0,0,0" HorizontalAlignment="Left" Width="118"/>
                <CheckBox x:Name="chk_Methodes_RefreshHostnames" Content="Hostnames" Grid.Column="5" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="86"/>
                <CheckBox x:Name="chk_Methodes_Refresh_ReverseNSLookUp" Content="Reverse NSLookup" Grid.Column="6" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="119"/>
                <CheckBox x:Name="chk_Methodes_Refresh_MacVendor" Content="Mac / Vendors" Grid.Column="7" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="102"/>

                <CheckBox x:Name="chk_Methodes_ScanTCPPorts" Content="TCP Ports" Grid.Column="8" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="78"/>
                <CheckBox x:Name="chk_Methodes_ScanUDPPorts" Content="UDP Ports" Grid.Column="9" Margin="10,6,0,-1" HorizontalAlignment="Left" Width="81"/>
                <TextBox x:Name="tb_IP_Address" Grid.Column="10" HorizontalAlignment="Right" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Center" Width="139" Height="20" Margin="0,0,10,0"/>
                <Button x:Name="bt_ScanIP" Grid.Column="11" Content="Scan IP" HorizontalAlignment="Center" VerticalAlignment="Center" Width="108" Height="20" Click="bt_ScanIP_Click"/>

            </Grid>
            <Label x:Name="lbl_ScanStatus" Content="..." HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="1806" Height="26" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Margin="15,0,0,0"/>
        </Grid>

    </Grid>
</Window>
