<Window x:Class="MyNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNetworkMonitor"
         xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="799" Width="1855">
    <Window.Resources>
        <CollectionViewSource x:Key="cvs" Source="{Binding}" IsLiveSortingRequested="True" IsLiveGroupingRequested="True">
            <!-- Sorting -->
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="GroupDescription" />
            </CollectionViewSource.SortDescriptions>

            <!-- Grouping -->
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="GroupDescription"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <DataTemplate x:Key="GroupingHeader">
            <Border Background="LightBlue">
                <TextBlock Margin="10 5 5 5" FontSize="12" FontWeight="Bold" Text="{Binding Name}"/>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="339"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="29"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="51"/>
                <RowDefinition/>
                <RowDefinition Height="30" MinHeight="44.04"/>
            </Grid.RowDefinitions>
            <TabControl Margin="10,10,10,10" Grid.Row="2">
                <TabItem Header="From IP Ranges">
                    <Grid x:Name="SummaryGrid">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="181*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="bt_Edit_IP_Range" Content="Edit Range" Margin="210,10,10,10" Grid.Row="0" Click="bt_Edit_IP_Range_Click" />

                        <DataGrid x:Name="dgv_IP_Ranges" Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2" AutoGeneratingColumn="dgv_IPRanges_OnAutoGeneratingColumn" ItemsSource="{Binding Source={StaticResource cvs}}">
                            <DataGrid.GroupStyle>
                                <GroupStyle HeaderTemplate="{StaticResource ResourceKey=GroupingHeader}" />
                            </DataGrid.GroupStyle>
                        </DataGrid>

                        <Button x:Name="bt_Scan_IP_Ranges" Content="Scan IP Range" Click="bt_Scan_IP_Ranges_Click" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="2" />

                    </Grid>
                </TabItem>
                <TabItem Header="From Remote"/>
                <TabItem Header="Filter"/>




            </TabControl>

            <Grid x:Name="tb_Ports" Grid.Column="1" Grid.Row="1" Margin="13,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="22*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="156"/>
                    <ColumnDefinition Width="58"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="173"/>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="124"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="chk_Methodes_ARP" Content="arp -a" Margin="0,5,46,1" HorizontalAlignment="Right" Width="76" Grid.Column="1"/>
                <CheckBox x:Name="chk_Methodes_Ping" Content="Ping" Margin="10,4,0,3" HorizontalAlignment="Left" Width="60"/>
                <CheckBox x:Name="chk_Methodes_SSDP" Content="SSDP" Grid.Column="2" Margin="0,7,0,0" HorizontalAlignment="Center" Width="60"/>
                <CheckBox x:Name="chk_Methodes_RefreshHostnames" Content="scan Hostname" Grid.Row="0" Grid.Column="4" Margin="10,7,0,0" HorizontalAlignment="Left" Width="106"/>
                <CheckBox x:Name="chk_Methodes_Refresh_ReverseNSLookUp" Content="Reverse NSLookup" Grid.Row="0" Grid.Column="5" Margin="10,4,0,3" HorizontalAlignment="Left" Width="119"/>
                <CheckBox x:Name="chk_Methodes_Refresh_MacVendor" Content="Mac / Vendors" Grid.Row="0" Grid.Column="6" Margin="0,6,0,1" HorizontalAlignment="Center" Width="102"/>

                <CheckBox x:Name="chk_Methodes_ScanTCPPorts" Content="TCP Ports" Grid.Row="0" Grid.Column="7" Margin="0,6,0,1" HorizontalAlignment="Center" Width="78"/>
                <CheckBox x:Name="chk_Methodes_ScanUDPPorts" Content="UDP Ports" Grid.Row="0" Grid.Column="8" Margin="0,5,0,2" HorizontalAlignment="Center" Width="82"/>
                <TextBox x:Name="tb_IP_Address" Grid.Column="10" TextWrapping="Wrap" VerticalAlignment="Center" Height="20" Margin="9,0,9,0"/>
                <TextBox x:Name="tb_TCPPorts" Grid.Column="11" TextWrapping="Wrap" VerticalAlignment="Center" Height="20" Margin="7,0,10,0"/>
                <Button x:Name="bt_ScanIP" Grid.Column="13" Content="Scan Selected IP" VerticalAlignment="Center" Height="20" Click="bt_ScanIP_Click" HorizontalAlignment="Center" Width="108"/>
                <TextBox x:Name="tb_UDPPorts" Grid.Column="12" TextWrapping="Wrap" VerticalAlignment="Center" Height="20" Margin="10,0,10,0"/>
                <Grid Grid.Column="4" Margin="0,27,0,0" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="115"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <RadioButton x:Name="rb_ScanHostnames_PingReplyOnly" Content="Ping Reply only" HorizontalAlignment="Left" VerticalAlignment="Center" Height="24" Width="103" Margin="10,0,0,0" IsChecked="True" VerticalContentAlignment="Center"/>
                    <RadioButton x:Name="rb_ScanHostnames_All_IPs" Grid.Column="1" Content="Deep" HorizontalAlignment="Left" VerticalAlignment="Center" Height="24" Width="60" Margin="5,0,0,0" VerticalContentAlignment="Center"/>
                </Grid>
                <Grid Grid.Column="1" Margin="0,27,0,0" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="90"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chk_ARP_DeleteCacheBefore" Content="arp -d" VerticalAlignment="Center" Height="16" Margin="6,0,6,0" Click="chk_ARP_DeleteCacheBefore_Click"/>
                    <CheckBox x:Name="chk_ARPRequestBeforeARP_a" Grid.Column="1" Content="pre request" VerticalAlignment="Center" Margin="4,0,4,0"/>
                </Grid>


            </Grid>
            <Label x:Name="lbl_ScanStatus" Content="..." HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Center" Width="1806" Height="26" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Margin="18,0,0,0"/>
            <Grid Grid.Column="1" Grid.Row="2" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="629*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgv_Results" Grid.Column="0" Margin="10,10,10,10" Grid.Row="0" AutoGeneratingColumn="dgv_ScanResults_OnAutoGeneratingColumn">


                    <DataGrid.Resources>
                        <DataTemplate x:Key="ARPStatus">
                            <Image Source="{Binding Path=ARPStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                        <DataTemplate x:Key="PingStatus">
                            <Image Source="{Binding Path=PingStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                        <DataTemplate x:Key="SSDPStatus">
                            <Image Source="{Binding Path=SSDPStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                        <DataTemplate x:Key="ReverseLookUpStatus">
                            <Image Source="{Binding Path=ReverseLookUpStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                    </DataGrid.Resources>
                </DataGrid>
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="118*"/>
                        <ColumnDefinition Width="1457*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Filter:" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Slider x:Name="slider_TimeOut" HorizontalAlignment="Left" VerticalAlignment="Top" Width="311" Maximum="3000" Minimum="10" Value="250" TickFrequency="10" SmallChange="10" LargeChange="50" Grid.Row="1" IsSnapToTickEnabled="True" ValueChanged="slider_TimeOut_ValueChanged" Height="18" Margin="18,7,0,0"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="TimeOut Portscan:" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="108" VerticalContentAlignment="Bottom"/>
                <Label Grid.Column="1" Content="{Binding ElementName=slider_TimeOut, Path=Value}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="25" VerticalContentAlignment="Bottom"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="171*"/>
                    <ColumnDefinition Width="159*"/>
                    <ColumnDefinition Width="686*"/>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="107"/>
                    <ColumnDefinition Width="234"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="3" Content="IP-Address" HorizontalAlignment="Left" VerticalAlignment="Center" Width="101" Height="25"/>
                <Label Grid.Column="4" Content="TCP-Ports" HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top" Height="26" Width="82"/>
                <Label Grid.Column="5" Content="UDP-Ports" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="25" Width="65"/>
                <Label Content="Methodes to find Device:" Grid.Column="0" Margin="10,0,0,1" HorizontalAlignment="Left" Width="147"/>
                <Label Content="Device Informations:" Grid.Column="2" HorizontalAlignment="Left" Width="118" Margin="10,0,0,-1"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
