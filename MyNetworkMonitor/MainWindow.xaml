<Window x:Class="MyNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNetworkMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="799" Width="1855">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="251"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="187"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="30" MinHeight="44.04"/>
            </Grid.RowDefinitions>
            <TabControl Margin="10,10,10,10" Grid.Row="2">
                <TabItem Header="From IP Ranges">
                    <Grid x:Name="SummaryGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="69*"/>
                        </Grid.RowDefinitions>
                        <DataGrid x:Name="dgv_IP_Ranges" Margin="10,10,10,10"/>
                    </Grid>
                </TabItem>
                <TabItem Header="From Remote"/>
                <TabItem Header="Filter"/>




            </TabControl>
            <DataGrid x:Name="dgv_Results" Grid.Column="1" Margin="10,10,10,10" Grid.Row="2" AutoGeneratingColumn="dgv_Devices_OnAutoGeneratingColumn">

                <DataGrid.Resources>
                    <DataTemplate x:Key="ARPStatus">
                        <Image Source="{Binding Path=ARPStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="PingStatus">
                        <Image Source="{Binding Path=PingStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="SSDPStatus">
                        <Image Source="{Binding Path=SSDPStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="ReverseLookUpStatus">
                        <Image Source="{Binding Path=ReverseLookUpStatus}" Width="16" Height="16"/>
                    </DataTemplate>

                </DataGrid.Resources>
            </DataGrid>
            <Grid Grid.Column="2" Margin="0,3,10,0" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="314*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgv_PortsOfSelectedDevice" Margin="10,10,10,10"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1" Margin="0,0,10,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="116"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="88"/>
                    <ColumnDefinition Width="43"/>
                    <ColumnDefinition Width="94"/>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="66"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Methodes:" Grid.Column="0"/>
                <CheckBox x:Name="chk_Methodes_ARP" Content="ARP Cache Table" Grid.Column="1" Margin="0,6,0,-1"/>
                <CheckBox x:Name="chk_Methodes_Ping" Content="Ping" Grid.Column="2" Margin="0,6,0,-1"/>
                <CheckBox x:Name="chk_Methodes_SSDP" Content="SSDP" Grid.Column="3" Margin="0,6,0,-1"/>




                <Label Content="Load:" Grid.Column="4"/>
                <CheckBox x:Name="chk_Methodes_RefreshHostnames" Content="Hostnames" Grid.Column="5" Margin="0,6,10,-1"/>
                <CheckBox x:Name="chk_Methodes_Refresh_ReverseNSLookUp" Content="Reverse NSLookup" Grid.Column="6" Margin="10,6,10,-1"/>
                <CheckBox x:Name="chk_Methodes_Refresh_MacVendor" Content="Mac / Vendors" Grid.Column="7" Margin="0,6,0,-1"/>

                <CheckBox x:Name="chk_Methodes_Ports" Content="Ports" Grid.Column="8" Margin="0,6,0,-1"/>
                <Button x:Name="bt_Scan_IP_Ranges" Content="Start Scan" Click="bt_Scan_IP_Ranges_Click" Grid.Column="9" Grid.ColumnSpan="1" HorizontalAlignment="Right" Width="93" Margin="0,1,10,-1"/>

            </Grid>
            <Label Grid.Column="2" Content="open Ports on Selection" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="167" Height="26"/>
            <Label x:Name="lbl_ScanStatus" Grid.Column="1" Content="..." HorizontalAlignment="Center" Margin="0,8,0,0" Grid.Row="3" VerticalAlignment="Top" Width="1397"/>
        </Grid>

    </Grid>
</Window>
