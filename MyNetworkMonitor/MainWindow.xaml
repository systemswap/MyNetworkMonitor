<Window x:Class="MyNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNetworkMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="799" Width="1855">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="251"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="187"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <TabControl Margin="10,10,10,10" Grid.Row="2">
                <TabItem Header="From IP Ranges">
                    <Grid x:Name="SummaryGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="69*"/>
                        </Grid.RowDefinitions>
                        <DataGrid x:Name="dgv_IP_Ranges" Margin="10,10,10,10"/>
                    </Grid>
                </TabItem>
                <TabItem Header="From Remote"/>
                <TabItem Header="Filter"/>




            </TabControl>
            <DataGrid x:Name="dgv_Results" Grid.Column="1" Margin="10,10,10,10" Grid.Row="2" AutoGeneratingColumn="dgv_Devices_OnAutoGeneratingColumn">

                <DataGrid.Resources>
                    <DataTemplate x:Key="ARP">
                        <Image Source="{Binding Path=ARP}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="Ping">
                        <Image Source="{Binding Path=Ping}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="SSDP">
                        <Image Source="{Binding Path=SSDP}" Width="16" Height="16"/>
                    </DataTemplate>

                    <DataTemplate x:Key="ReverseLookUp">
                        <Image Source="{Binding Path=ReverseLookUp}" Width="16" Height="16"/>
                    </DataTemplate>

                </DataGrid.Resources>
            </DataGrid>
            <Grid Grid.Column="2" Margin="0,3,10,0" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="314*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgv_PortsOfSelectedDevice" Margin="10,10,10,10"/>
            </Grid>
            <Grid Grid.Column="1" Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="62"/>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="71"/>
                    <ColumnDefinition Width="61"/>
                    <ColumnDefinition Width="147"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Methodes:"  Height="25
                       
                       " Margin="0,0,0,5"/>
                <CheckBox x:Name="chk_Methodes_ARP" Content="ARP" Grid.Column="1" Margin="0,6,0,-1"/>
                <CheckBox x:Name="chk_Methodes_Ping" Content="Ping" Grid.Column="2" Margin="0,6,0,-1"/>
                <CheckBox x:Name="chk_Methodes_SSDP" Content="SSDP" Grid.Column="3" Margin="0,6,0,-1"/>
                <CheckBox x:Name="chk_Methodes_Ports" Content="Ports" Grid.Column="4" Margin="0,6,0,-1"/>

                <CheckBox x:Name="chk_Methodes_ReverseNSLookUp" Content="Reverse NSLookup" Grid.Column="6" Margin="10,6,10,-1"/>

                <Button x:Name="bt_Scan_IP_Ranges" Content="Start Scan" Click="bt_Scan_IP_Ranges_Click" Grid.Column="7" Grid.ColumnSpan="1" HorizontalAlignment="Right" Width="93" Margin="0,1,10,-1"/>

            </Grid>
            <Label Grid.Column="2" Content="open Ports on Selection" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="167" Height="26"/>
        </Grid>

    </Grid>
</Window>
