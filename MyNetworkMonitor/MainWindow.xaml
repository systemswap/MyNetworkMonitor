<Window x:Class="MyNetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNetworkMonitor"
        mc:Ignorable="d"
        Title="MainWindow" Height="799" Width="1855">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="251"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="29"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition Height="30" MinHeight="44.04"/>
            </Grid.RowDefinitions>
            <TabControl Margin="10,10,10,10" Grid.Row="2">
                <TabItem Header="From IP Ranges">
                    <Grid x:Name="SummaryGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="112*"/>
                            <ColumnDefinition Width="113*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="181*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="bt_Edit_IP_Range" Content="Edit Range" HorizontalAlignment="Center" Width="93" Margin="0,10,0,10" Grid.Row="0" Grid.Column="0" />
                        <Button x:Name="bt_Add_IP_Range" Content="Add Range" HorizontalAlignment="Center" Width="93" Margin="0,10,0,10" Grid.Row="0" Grid.Column="1" />

                        <DataGrid x:Name="dgv_IP_Ranges" Margin="10,10,10,10" Grid.Row="1" Grid.ColumnSpan="2"/>
                        <Button x:Name="bt_Scan_IP_Ranges" Content="Scan IP Range" Click="bt_Scan_IP_Ranges_Click" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="205" Margin="10,10,0,10" Grid.Row="2" />
                        <Grid Grid.ColumnSpan="2"/>

                    </Grid>
                </TabItem>
                <TabItem Header="From Remote"/>
                <TabItem Header="Filter"/>




            </TabControl>

            <Grid x:Name="tb_Ports" Grid.Column="1" Grid.Row="1" Margin="13,0,10,0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="165"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition Width="110"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="101"/>
                    <ColumnDefinition Width="113"/>
                    <ColumnDefinition Width="124"/>
                </Grid.ColumnDefinitions>

                <Label Content="Methodes to find Device:" Grid.Column="0"/>
                <CheckBox x:Name="chk_Methodes_ARP" Content="arp -a" Grid.Column="1" Margin="1,6,0,-1" HorizontalAlignment="Left" Width="62"/>
                <CheckBox x:Name="chk_Methodes_Ping" Content="Ping" Grid.Column="2" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="60"/>
                <CheckBox x:Name="chk_Methodes_SSDP" Content="SSDP" Grid.Column="3" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="60"/>




                <Label Content="Device Informations:" Grid.Column="4" Margin="39,0,0,0" HorizontalAlignment="Left" Width="118"/>
                <CheckBox x:Name="chk_Methodes_RefreshHostnames" Content="Hostnames" Grid.Column="5" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="86"/>
                <CheckBox x:Name="chk_Methodes_Refresh_ReverseNSLookUp" Content="Reverse NSLookup" Grid.Column="6" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="119"/>
                <CheckBox x:Name="chk_Methodes_Refresh_MacVendor" Content="Mac / Vendors" Grid.Column="7" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="102"/>

                <CheckBox x:Name="chk_Methodes_ScanTCPPorts" Content="TCP Ports" Grid.Column="8" Margin="0,6,0,-1" HorizontalAlignment="Center" Width="78"/>
                <CheckBox x:Name="chk_Methodes_ScanUDPPorts" Content="UDP Ports" Grid.Column="9" Margin="10,6,0,-1" HorizontalAlignment="Left" Width="81" Grid.ColumnSpan="2"/>
                <TextBox x:Name="tb_IP_Address" Grid.Column="10" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Width="106" Height="20" Margin="0,0,8,0"/>
                <TextBox x:Name="tb_TCPPorts" Grid.Column="11" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="84" Height="16" Margin="7,0,0,0"/>
                <Button x:Name="bt_ScanIP" Grid.Column="13" Content="Scan Selected IP" VerticalAlignment="Bottom" Height="20" Click="bt_ScanIP_Click" HorizontalAlignment="Center" Width="108" Margin="0,0,0,5"/>
                <TextBox x:Name="tb_UDPPorts" Grid.Column="12" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="86" Height="17" Margin="10,0,0,0"/>


            </Grid>
            <Label x:Name="lbl_ScanStatus" Content="..." HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Width="1806" Height="26" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Margin="15,0,0,0"/>
            <Grid Grid.Column="1" Grid.Row="2" Margin="0,0,0,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="629*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dgv_Results" Grid.Column="0" Margin="10,10,10,10" Grid.Row="0" AutoGeneratingColumn="dgv_Devices_OnAutoGeneratingColumn">


                    <DataGrid.Resources>
                        <DataTemplate x:Key="ARPStatus">
                            <Image Source="{Binding Path=ARPStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                        <DataTemplate x:Key="PingStatus">
                            <Image Source="{Binding Path=PingStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                        <DataTemplate x:Key="SSDPStatus">
                            <Image Source="{Binding Path=SSDPStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                        <DataTemplate x:Key="ReverseLookUpStatus">
                            <Image Source="{Binding Path=ReverseLookUpStatus}" Width="16" Height="16"/>
                        </DataTemplate>

                    </DataGrid.Resources>
                </DataGrid>
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="118*"/>
                        <ColumnDefinition Width="1457*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Filter:" HorizontalAlignment="Left" Margin="34,0,0,0" VerticalAlignment="Center"/>
                </Grid>
            </Grid>
            <Slider x:Name="slider_TimeOut" HorizontalAlignment="Center" VerticalAlignment="Center" Width="230" Maximum="3000" Minimum="10" Value="500" TickFrequency="10" SmallChange="10" LargeChange="50" Grid.Row="1" IsSnapToTickEnabled="True" ValueChanged="slider_TimeOut_ValueChanged"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="125"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="TimeOut Portscan:" HorizontalAlignment="Center" Margin="0,-2,0,0" VerticalAlignment="Top" Height="26" Width="108"/>
                <Label Grid.Column="1" Content="{Binding ElementName=slider_TimeOut, Path=Value}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="111"/>
                    <ColumnDefinition Width="98"/>
                    <ColumnDefinition Width="252"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="1" Content="IP-Address" HorizontalAlignment="Left" VerticalAlignment="Center" Width="101"/>
                <Label Grid.Column="2" Content="TCP-Ports" HorizontalAlignment="Left" Margin="10,-2,0,0" VerticalAlignment="Top"/>
                <Label Grid.Column="3" Content="UDP-Ports" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
