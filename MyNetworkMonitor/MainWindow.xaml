                    <Label Grid.Column="2" Content="IP" HorizontalAlignment="Left" Margin="10,-6,0,0" VerticalAlignment="Top" Height="23" Width="20"/>
                    <Label Grid.Column="3" Content="Hostname" HorizontalAlignment="Left" Margin="10,-6,0,0" VerticalAlignment="Top" Height="23" Width="64"/>
                    <Label Grid.Column="4" Content="Internal Name" HorizontalAlignment="Left" Margin="10,-6,0,0" VerticalAlignment="Top" Height="23" Width="85"/>
