                        <CheckBox x:Name="chk_IPRanges_groupDevices" Content="group Devices" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Click="chk_IPRanges_groupDevices_Click"/>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="bt_Scan_IP_Ranges" Content="Scan IP Ranges" Click="bt_Scan_IP_Ranges_Click" Margin="10,10,10,10" Background="#BFA4B1BF" OpacityMask="Black" Grid.Column="1">
