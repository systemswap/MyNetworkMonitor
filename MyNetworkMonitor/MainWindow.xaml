                        <Label Content="Subnetmask" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Margin="0,12,0,0" Grid.Row="2" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Left" Width="138" Background="#FF189AB4"/>
